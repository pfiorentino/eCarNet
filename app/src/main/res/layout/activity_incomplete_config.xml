<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.alpha12.ecarnet.activities.IncompleteConfigActivity"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/defaultBackgroundColor">
    <TextView android:id="@+id/titleTextView"
        android:layout_width="match_parent" android:layout_height="120dp" android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="Huh oh ! Il nous manque quelques infos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:elevation="4dp"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@id/titleTextView">
        <TextView android:id="@+id/userNameTextView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Bonjour,"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"/>
        <TextView android:id="@+id/changeAccountTextView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Ce n'est pas vous ?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000EE"/>

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="La configuration de votre compte a été interrompue."
            android:paddingTop="16dp" android:paddingBottom="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Une dernière étape est nécessaire avant de pouvoir utiliser pleinement l'application."
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="52dp"
        android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:background="#E0E0E0">
        <Button android:id="@+id/finishConfigButton"
            android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:paddingLeft="24dp" android:paddingRight="24dp"
            android:drawableRight="@drawable/transparent_button_next_drawable" android:drawablePadding="8dp"
            android:text="Continuer la configuration"
            android:background="@drawable/transparent_button"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>
