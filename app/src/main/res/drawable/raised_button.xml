<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorPrimary700" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="16dp"
                android:right="16dp"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="@color/buttonActiveState" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="16dp"
                android:right="16dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorPrimary" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="16dp"
                android:right="16dp"/>
        </shape>
    </item>
</selector>